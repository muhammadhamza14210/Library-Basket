<!-- dialog_add_edit_book.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- EditText for book title -->
    <EditText
        android:id="@+id/dialog_edit_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Book Title"
        android:inputType="textCapSentences"
        android:maxLines="1"
        android:layout_marginBottom="8dp" />

    <!-- EditText for author name -->
    <EditText
        android:id="@+id/dialog_edit_text_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Author Name"
        android:inputType="textCapWords"
        android:maxLines="1"
        android:layout_marginBottom="8dp" />

    <!-- EditText for genre -->
    <EditText
        android:id="@+id/dialog_edit_text_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Genre"
        android:inputType="textCapWords"
        android:maxLines="1"
        android:layout_marginBottom="8dp" />

    <!-- EditText for publication year -->
    <EditText
        android:id="@+id/dialog_edit_text_publication_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Publication Year"
        android:inputType="number"
        android:maxLines="1"
        android:layout_marginBottom="8dp" />

    <!-- CheckBox for read status -->
    <CheckBox
        android:id="@+id/dialog_checkbox_read_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read"
        android:layout_marginBottom="8dp" />

    <!-- Buttons for confirmation and cancellation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="5dp">

        <Button
            android:id="@+id/dialog_button_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CONFIRM" />

        <!-- Space between the buttons -->
        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/dialog_button_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CANCEL" />

    </LinearLayout>

</LinearLayout>
